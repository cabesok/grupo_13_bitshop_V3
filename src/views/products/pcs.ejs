<!DOCTYPE html>
<html lang="en">
  
  <%- include ("../partials/head") %>

  <body>

    <%- include ("../partials/header") %>
    <div class="showcase-pcs"></div>

      <section class= "container-productos" id="lista-productos">
        <% for (let i = 0; i < products.length; i++) { %>
            
          <article class="producto">
            <img src="/uploads/products/<%= products[i].image %>" alt="">
            <h4><%= products[i].name %></h4>
            <p>$ <%= products[i].price %></p>
            <button class="btn btn-primary agregar-carrito" data-id="<%= products[i].id %>">Agregar al carrito</button> 
            <a href="/product/detail/<%= products[i].id %>">Ver</a>
          </article>
            
        <% } %>

      </section>
 
    
 <%- include ("../partials/footer") %>
 <script src="/js/carrito.js"></script>
 <script src="/js/pedido.js"></script>
 <script src="/js/main.js"></script>
  </body>
</html>